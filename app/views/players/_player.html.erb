<% @player = player %>
<%= form_for(@player) do |f| %>
	<tr>
		<td>
			<%= f.label :name, :class => "sr-only"%>
			<%= f.text_field :name, :class => "form-control player-name-edit", :value => @player.name %>
		</td>
		<td>
			<%= f.label :price, :class => "sr-only" %>
			<%= f.number_field :price, :class =>  "form-control player-edit", :value => number_with_precision(@player.price, :precision => 2), :size => 20, :step => 'any' %>
		</td>
		<td>
			<%= f.label :value, :class => "sr-only", :step => 'any' %>
			<%= f.number_field :value, :class =>  "form-control player-edit", :value => number_with_precision(@player.value, :precision => 2), :step => 'any' %>
		</td>
		<td>
			<%= f.submit "Update player", :class => "btn btn-default" %>
		</td>
		<td>
			<%= link_to "delete", player, method: :delete, :data => { :confirm => "Delete player?" }, :title => @player.name %>
		</td>
	</tr>
<% end %>